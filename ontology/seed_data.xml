      <Property key="passengers" type="int">28</Property>
      <Property key="capacity" type="int">50</Property>
      <Property key="status" type="string">IN_TRANSIT</Property>
    </Node>
    
    <!-- 公园 -->
    <Node id="PRK_001" type="Park">
      <Property key="park_id" type="string">PRK001</Property>
      <Property key="name" type="string">中央公园</Property>
      <Property key="area" type="float">120.5</Property>
      <Property key="facilities" type="string">游乐场,健身设施,湖泊</Property>
      <Property key="open_hours" type="string">6:00-22:00</Property>
      <Property key="visitors" type="int">356</Property>
      <Property key="status" type="string">OPEN</Property>
