  <Description>智慧城市系统 - 示例数据</Description>
  
  <Nodes>
    <!-- 建筑 -->
    <Node id="BLD_001" type="Building">
      <Property key="building_id" type="string">BLD001</Property>
      <Property key="name" type="string">智慧大厦</Property>
      <Property key="type" type="string">COMMERCIAL</Property>
      <Property key="address" type="string">市中心广场1号</Property>
      <Property key="floors" type="int">30</Property>
      <Property key="energy_usage" type="float">5200.5</Property>
      <Property key="status" type="string">ACTIVE</Property>
    </Node>
    
    <!-- 传感器 -->
    <Node id="SNS_001" type="Sensor">
      <Property key="sensor_id" type="string">SNS001</Property>
      <Property key="name" type="string">大厦温度传感器</Property>
      <Property key="type" type="string">TEMPERATURE</Property>
      <Property key="location" type="string">智慧大厦1层大厅</Property>
