    <Node id="SNS_002" type="Sensor">
      <Property key="sensor_id" type="string">SNS002</Property>
      <Property key="name" type="string">空气质量传感器</Property>
      <Property key="type" type="string">AIR_QUALITY</Property>
      <Property key="location" type="string">城市公园</Property>
      <Property key="reading" type="float">42</Property>
      <Property key="unit" type="string">AQI</Property>
      <Property key="status" type="string">ONLINE</Property>
    </Node>
    
