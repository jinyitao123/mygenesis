      <Property key="source" type="string">HYDRO</Property>
      <Property key="frequency" type="float">50.02</Property>
      <Property key="status" type="string">STABLE</Property>
    </Node>
    
    <!-- 垃圾处理 -->
    <Node id="WM_001" type="WasteManagement">
      <Property key="facility_id" type="string">WM001</Property>
      <Property key="name" type="string">城市垃圾处理中心</Property>
