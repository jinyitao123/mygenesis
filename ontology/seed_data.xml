      <Property key="cycle_time" type="int">90</Property>
      <Property key="status" type="string">OPERATIONAL</Property>
    </Node>
    
    <!-- 公共交通 -->
    <Node id="PT_001" type="PublicTransport">
      <Property key="vehicle_id" type="string">BUS001</Property>
      <Property key="type" type="string">BUS</Property>
      <Property key="route" type="string">1路</Property>
