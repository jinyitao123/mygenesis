      <Property key="capacity" type="float">500</Property>
      <Property key="current_load" type="float">320</Property>
      <Property key="location" type="string">城市东部</Property>
      <Property key="status" type="string">OPERATIONAL</Property>
    </Node>
  </Nodes>
  
  <Links>
    <!-- 传感器监控建筑 -->
    <Link type="MONITORS" source="SNS_001" target="BLD_001"/>
    
    <!-- 电网连接建筑 -->
    <Link type="CONNECTS" source="GRID_001" target="BLD_001"/>
  </Links>
</World>
