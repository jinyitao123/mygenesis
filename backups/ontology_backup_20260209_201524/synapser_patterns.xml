<?xml version="1.0" encoding="UTF-8"?>
<SynapserPatterns>
    <Version>1.0.0</Version>
    <Description>供应链管理系统 - 自然语言意图映射</Description>
    
    <Pattern action="PROC_LOAD_CARGO" requires_target="true" target_type="TRUCK">
        <Keywords>装载,装货,加载,上货,装车</Keywords>
        <Templates>
            <Template>把货物装到{target}</Template>
            <Template>给{target}装载货物</Template>
            <Template>在{target}上装货</Template>
        </Templates>
    </Pattern>
    
    <Pattern action="PROC_UNLOAD_CARGO" requires_target="true" target_type="TRUCK">
        <Keywords>卸载,卸货,下货,卸车</Keywords>
        <Templates>
            <Template>从{target}卸货</Template>
            <Template>卸载{target}的货物</Template>
            <Template>把货物从{target}上卸下来</Template>
        </Templates>
    </Pattern>
    
    <Pattern action="PROC_TRANSPORT" requires_target="true" target_type="TRUCK">
        <Keywords>运输,运送,搬运,移动,开车</Keywords>
        <Templates>
            <Template>用{target}运输货物</Template>
            <Template>驾驶{target}送货</Template>
            <Template>让{target}去送货</Template>
        </Templates>
    </Pattern>
    
    <Synonyms>
        <SynonymGroup primary="卡车">
            <Alias>货车</Alias>
            <Alias>运输车</Alias>
            <Alias>车辆</Alias>
        </SynonymGroup>
        
        <SynonymGroup primary="仓库">
            <Alias>库房</Alias>
            <Alias>存储中心</Alias>
            <Alias>货仓</Alias>
        </SynonymGroup>
        
        <SynonymGroup primary="货物">
            <Alias>包裹</Alias>
            <Alias>物品</Alias>
            <Alias>商品</Alias>
        </SynonymGroup>
    </Synonyms>
</SynapserPatterns>