{
  "domain_id": "finance_risk",
  "name": "金融风控图谱",
  "description": "金融风险控制领域模块，包含账户、交易、担保等金融实体",
  "version": "1.0.0",
  "author": "Genesis Forge Team",
  "created_at": "2026-02-05",
  
  "ui_config": {
    "primary_color": "#8b5cf6",
    "secondary_color": "#10b981",
    "accent_color": "#ef4444",
    "background_color": "#F5F5F5",
    "text_color": "#333333",
    "font_family": "Microsoft YaHei, sans-serif",
    "icon_set": "emoji"
  },
  
  "features": {
    "object_types": ["ACCOUNT", "TRANSACTION", "CUSTOMER", "LOAN", "GUARANTEE"],
    "action_types": ["PROC_TRANSFER", "PROC_APPROVE_LOAN", "PROC_RISK_ASSESSMENT", "PROC_FRAUD_DETECTION"],
    "relation_types": ["OWNS", "TRANSFERS_TO", "APPLIES_FOR", "GUARANTEES", "BELONGS_TO"],
    "supported_csv_columns": ["id", "name", "type", "balance", "status", "risk_level", "amount", "date"]
  },
  
  "default_objects": [
    {
      "id": "account_001",
      "name": "企业账户A",
      "type": "ACCOUNT",
      "balance": 1000000,
      "status": "正常",
      "risk_level": "低"
    },
    {
      "id": "customer_001",
      "name": "客户张三",
      "type": "CUSTOMER",
      "credit_score": 750,
      "status": "活跃"
    }
  ],
  
  "templates": {
    "csv_import": {
      "filename": "finance_data.csv",
      "columns": ["id", "name", "type", "balance", "status", "properties_json"],
      "example": "account_001,企业账户A,ACCOUNT,1000000,正常,{\"risk_level\":\"低\",\"currency\":\"CNY\"}"
    },
    "cypher_queries": {
      "find_high_risk_accounts": "MATCH (a:ACCOUNT) WHERE a.risk_level = '高' RETURN a.id, a.name, a.balance",
      "find_transactions_by_date": "MATCH (t:TRANSACTION) WHERE t.date >= $start_date RETURN t",
      "get_customer_network": "MATCH (c:CUSTOMER)-[:OWNS]->(a:ACCOUNT) RETURN c, a"
    }
  },
  
  "validation_rules": {
    "account_balance": "balance >= 0",
    "credit_score": "credit_score >= 300 AND credit_score <= 850",
    "transaction_amount": "amount > 0",
    "loan_amount": "amount > 0 AND amount <= 10000000"
  }
}