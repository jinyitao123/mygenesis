    <Link type="CREATES" source="customer_001" target="portfolio_001">
      <Property key="creation_date" type="string">2025-01-15</Property>
    </Link>
    
    <!-- 风险关联法规 -->
    <Link type="ASSOCIATED_WITH" source="risk_001" target="regulation_001">
      <Property key="compliance_requirement" type="string">资本充足率</Property>
    </Link>
    
    <!-- 交易触发警报 -->
    <Link type="RAISES" source="transaction_001" target="alert_001">
