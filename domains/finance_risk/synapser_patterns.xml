<?xml version="1.0" encoding="UTF-8"?>
<SynapserPatterns>
    <Version>1.0.0</Version>
    <Description>金融风控系统 - 自然语言意图映射</Description>
    
    <!-- 风险评估 -->
    <Pattern action="RISK_ASSESS" requires_target="true" target_type="Risk">
        <Keywords>评估,分析,评估风险,risk,assess,analyze</Keywords>
        <Templates>
            <Template>评估{risk}</Template>
            <Template>分析{risk}风险</Template>
            <Template>assess {risk}</Template>
        </Templates>
    </Pattern>
    
    <!-- 执行交易 -->
    <Pattern action="EXECUTE_TRADE" requires_target="false" target_type="any">
        <Keywords>交易,买卖,买入,卖出,trade,buy,sell</Keywords>
        <Templates>
            <Template>执行交易</Template>
            <Template>买入{asset}</Template>
            <Template>卖出{asset}</Template>
            <Template>execute trade</Template>
        </Templates>
    </Pattern>
    
    <!-- 警报确认 -->
    <Pattern action="ACKNOWLEDGE_ALERT" requires_target="true" target_type="Alert">
        <Keywords>确认,收到,警报,acknowledge,alert,confirm</Keywords>
        <Templates>
            <Template>确认{alert}</Template>
            <Template>收到警报{alert}</Template>
            <Template>acknowledge {alert}</Template>
        </Templates>
    </Pattern>
    
    <!-- 组合平衡 -->
    <Pattern action="REBALANCE_PORTFOLIO" requires_target="true" target_type="Portfolio">
        <Keywords>平衡,调整,重置,rebalance,adjust,reset</Keywords>
        <Templates>
            <Template>平衡{portfolio}</Template>
            <Template>调整{portfolio}配置</Template>
            <Template>rebalance {portfolio}</Template>
        </Templates>
    </Pattern>
    
    <!-- 客户风险 -->
    <Pattern action="UPDATE_CUSTOMER_RISK" requires_target="true" target_type="Customer">
        <Keywords>风险,画像,更新,risk,profile,update</Keywords>
        <Templates>
            <Template>更新{customer}风险画像</Template>
            <Template>评估{customer}风险</Template>
            <Template>update {customer} risk</Template>
        </Templates>
    </Pattern>
    
    <!-- 合规检查 -->
    <Pattern action="CHECK_COMPLIANCE" requires_target="true" target_type="Regulation">
        <Keywords>合规,检查,compliance,check,audit</Keywords>
        <Templates>
            <Template>检查{regulation}合规</Template>
            <Template>合规检查{regulation}</Template>
            <Template>check compliance {regulation}</Template>
        </Templates>
    </Pattern>
    
    <!-- 通用查询 -->
    <Pattern action="ACT_INSPECT" requires_target="false" target_type="any">
        <Keywords>查看,查询,检查,状态,信息,check,view,status,info</Keywords>
        <Templates>
            <Template>查看{portfolio}状态</Template>
            <Template>查询{risk}信息</Template>
            <Template>check status of {target}</Template>
        </Templates>
    </Pattern>
    
    <!-- 同义词库 - 金融风控特定实体别名 -->
    <Synonyms>
        <SynonymGroup primary="投资组合">
            <Alias>组合</Alias>
            <Alias>portfolio</Alias>
            <Alias>资产组合</Alias>
        </SynonymGroup>
        <SynonymGroup primary="资产">
            <Alias>证券</Alias>
            <Alias>asset</Alias>
            <Alias>金融产品</Alias>
        </SynonymGroup>
        <SynonymGroup primary="风险">
            <Alias>风险敞口</Alias>
            <Alias>risk</Alias>
            <Alias>风险指标</Alias>
        </SynonymGroup>
        <SynonymGroup primary="交易">
            <Alias>成交</Alias>
            <Alias>trade</Alias>
            <Alias>买卖</Alias>
        </SynonymGroup>
        <SynonymGroup primary="警报">
            <Alias>预警</Alias>
            <Alias>alert</Alias>
            <Alias>警告</Alias>
        </SynonymGroup>
        <SynonymGroup primary="客户">
            <Alias>投资者</Alias>
            <Alias>customer</Alias>
            <Alias>客户</Alias>
        </SynonymGroup>
        <SynonymGroup primary="法规">
            <Alias>合规要求</Alias>
            <Alias>regulation</Alias>
            <Alias>监管规定</Alias>
        </SynonymGroup>
    </Synonyms>
</SynapserPatterns>
