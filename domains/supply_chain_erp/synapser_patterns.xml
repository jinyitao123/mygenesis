<?xml version="1.0" encoding="UTF-8"?>
<SynapserPatterns>
    <Version>1.0.0</Version>
    <Description>供应链ERP系统 - 自然语言意图映射</Description>
    
    <Pattern action="ACT_SUBMIT_ORDER" requires_target="true" target_type="PurchaseOrder">
        <Keywords>提交,审批,送审,提请</Keywords>
        <Templates>
            <Template>提交{target}审批</Template>
            <Template>审批{target}</Template>
            <Template>送审{target}</Template>
        </Templates>
    </Pattern>
    
    <Pattern action="ACT_APPROVE_ORDER" requires_target="true" target_type="PurchaseOrder">
        <Keywords>批准,同意,通过,核准</Keywords>
        <Templates>
            <Template>批准{target}</Template>
            <Template>同意{target}</Template>
            <Template>通过{target}审批</Template>
        </Templates>
    </Pattern>
    
    <Pattern action="ACT_CREATE_ORDER" requires_target="false">
        <Keywords>创建,新建,建立,下单</Keywords>
        <Templates>
            <Template>创建采购订单</Template>
            <Template>新建订单</Template>
            <Template>下单</Template>
        </Templates>
    </Pattern>
    
    <Pattern action="ACT_SHIP_ORDER" requires_target="true" target_type="PurchaseOrder">
        <Keywords>发货,运送,配送,发出</Keywords>
        <Templates>
            <Template>发货{target}</Template>
            <Template>运送{target}</Template>
            <Template>配送{target}</Template>
        </Templates>
    </Pattern>
    
    <Pattern action="ACT_RECEIVE_ORDER" requires_target="true" target_type="PurchaseOrder">
        <Keywords>收货,接收,收到,入库</Keywords>
        <Templates>
            <Template>收货{target}</Template>
            <Template>接收{target}</Template>
            <Template>{target}入库</Template>
        </Templates>
    </Pattern>
    
    <Synonyms>
        <SynonymGroup primary="订单">
            <Alias>采购单</Alias>
            <Alias>订购单</Alias>
            <Alias>PO</Alias>
        </SynonymGroup>
        
        <SynonymGroup primary="供应商">
            <Alias>供货商</Alias>
            <Alias>厂商</Alias>
            <Alias>卖家</Alias>
        </SynonymGroup>
        
        <SynonymGroup primary="产品">
            <Alias>商品</Alias>
            <Alias>货物</Alias>
            <Alias>物品</Alias>
        </SynonymGroup>
    </Synonyms>
</SynapserPatterns>